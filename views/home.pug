extends layout
block content
  br
  a.btn(href="/articles/add") Dodaj nowe Ogłoszenie
  br
  br
  each article, i in articles
    div(class="row")
      div(class="col s12")
        div(class="card hoverable")
          div(class="card-content")
            span(class="card-title")
              a(href="/articles/"+article._id) #{article.title}
            p !{article.body}
  h3 Użytkownicy
  each users, i in user
    div(class="row")
      div(class="col s12")
        div(class="card hoverable")
          div(class="card-content")
            span(class="card-title")  
            a(href="/articles/profile/"+users._id) #{users.name}
            p !{users.about}
            
